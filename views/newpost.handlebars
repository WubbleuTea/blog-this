<div class="title card bg-success align-items-center">
    <h2 class="m-3">Add a New Post</h2>
</div>

<form class="new-post card bg-success d-flex justify-content-center m-5 p-5">
    <div>
        <label for="title">Post Title:</label>
        <input name="title" type="text" id="title" class="full-width">
    </div>
    <div class="mt-3 mb-3">
        <label for="text">Post: </label>
        <textarea name="text" type="textarea" id="text" class="full-width"></textarea>
    </div>
    <button type="submit" class="btn bg-primary text-white">Post this!</button>
</form>

<script src="/javascript/newpost.js"></script>
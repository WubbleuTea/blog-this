<div class="comments">
    {{#each this}}
    <section class="comment card bg-success m-1">
        <div class="text card p-1 bg-primary text-white align-items-center">
            <h4>{{comment_text}}</h4>
        </div>
        <div class="text-white align-items-center">
             <h5>by {{user.username}} on {{format_date created_at}}</h5> 
        </div>
    </section>
    {{/each}}
</div>
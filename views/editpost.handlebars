<div class="title card bg-success align-items-center">
    <div class="d-flex justify-content-center">
        <h2 class="m-3">Edit Your Post</h2>
    </div>
</div>


<form class="edit-post-form card bg-success d-flex justify-content-center m-5 p-5">
    <div>
        <label for="title">Title: </label>
        <input name="title" type="text" id="title" value="{{post.title}}" class="full-width"/>
    </div>
    <div class="mt-3 mb-3">
        <label for="text">Post: </label>
        <textarea name="text" type="textarea" id="text" class="full-width">{{post.post_text}}</textarea>
    </div>
    <div class="d-flex">
        <button type="submit" class="btn bg-primary col-5 shadow-lg text-white" id="edit">Save Your Edit</button>
        <button type="submit" class="btn bg-danger col-5 shadow-lg ml-auto text-white" id="delete">Delete Post Forever</button>
    </div>
</form>


<script src="/javascript/editpost.js"></script>